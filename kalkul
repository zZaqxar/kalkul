#include <iostream>

using namespace std;

int main()
{
    int num, count = 0;
    
    double sum = 0;
    
    while (true){
        
        cout <<"Введите число (0 для выхода)";
        
        cin>>num;
        if(num==0){
            break;
        }
        count++;
        
        sum +=num;
        }
    double average = sum/count;
    cout <<"Количество чисел:"<<count<<endl;
    cout<<"Сумма чисел:"<<sum<<endl;
    cout <<"Среднее арифметическое"<<average<<endl;
    
    


    return 0;
}
